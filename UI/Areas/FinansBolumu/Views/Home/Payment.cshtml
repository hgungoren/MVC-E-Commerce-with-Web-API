@model MODEL.Entities.Employee
@{
    ViewBag.Title = "Payment";
    Layout = "~/Areas/FinansBolumu/Views/Shared/_Layout.cshtml";
}
<hr />

<form role="form" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Ad</label>
                            @*<input type="text" class="form-control" id="inputEmail4" placeholder="Ad Girin">*@
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Ad Girin" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Soyad</label>
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyad Girin" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">IBAN No</label>
                            @Html.TextBoxFor(x => x.IbanNo, new { @class = "form-control", placeholder = "TR320010009999901234567890" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Aylık Ücret</label>
                            @Html.TextBoxFor(x => x.Salary, new { @class = "form-control", placeholder = "200₺" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Prim/Mesai Ücret</label>
                            @Html.TextBoxFor(x => x.PrimShift, new { @class = "form-control", placeholder = "Hakediliş Prim/Mesai Girin" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5">


                            @*<label for="inputPassword4">Banka Girin</label>
                                  @Html.DropDownListFor(model => model.ID, new SelectList(ViewBag.Banks as List<MODEL.Entities.Bank>, "ID", "BankName"), new
                                    {
                                        @class = "form-control",
                                data_placeholder = "Please select a supplier"
                                    })*@
                            <hr />
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    function degergoster() {
        var selectkutu = document.getElementById('selectPersonel');
        var selectkutu_value = selectkutu.options[selectkutu.selectedIndex].value;
        var selectkutu_text = selectkutu.options[selectkutu.selectedIndex].text;
        alert("Personel Adı Soyadı :" + selectkutu_text + '\n' + "Personel Maaşı :" + selectkutu_value);
    }
</script>


