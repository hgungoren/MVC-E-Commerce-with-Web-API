@model MODEL.Entities.Supplier
@{
    ViewBag.Title = "AddSupplier";
    Layout = "~/Areas/FinansBolumu/Views/Shared/_Layout.cshtml";
}

<hr />
<hr />
<form role="form" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="form-row">
                        <div class="form-group col-md-12">

                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Tedarikçi Firma</label>
                            @*<input type="text" class="form-control" id="inputEmail4" placeholder="Ad Girin">*@
                            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", placeholder = "Ad Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Kontak Adı</label>
                            @Html.TextBoxFor(x => x.ContactName, new { @class = "form-control", placeholder = "Kontak Adı Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">IBAN</label>
                            @Html.TextBoxFor(x => x.IbanNo, new { @class = "form-control", type = "datetime", placeholder = "IBAN No" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Telefon Numarası </label>
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "Telefon No Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Adres</label>
                            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", placeholder = "Adres Girin" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>


