@model MODEL.Entities.Supplier
@{
    ViewBag.Title = "UpdateSupplier";
    Layout = "~/Areas/FinansBolumu/Views/Shared/_Layout.cshtml";
}

<form role="form" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="form-row">
                        <div class="form-group col-md-12">

                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Ad</label>
                            @*<input type="text" class="form-control" id="inputEmail4" placeholder="Ad Girin">*@
                            @Html.TextBoxFor(x => x.ContactName, new { @class = "form-control", placeholder = "Kontak Ad Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Şirket Adı</label>
                            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", placeholder = "Şirket Adı Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Adres</label>
                            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", placeholder = "Doğum Tarihi Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">IBAN No</label>
                            @Html.TextBoxFor(x => x.IbanNo, new { @class = "form-control", placeholder = "IBAN No Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Telefon No</label>
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "Telefon Numarası Girin" })
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


