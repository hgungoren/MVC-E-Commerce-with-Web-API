@model MODEL.Entities.AppUser
@{
    Layout = "~/Areas/Halklaİliskiler/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header" style="color:brown">
            <h3 class="card-title">Kişi Düzenleme Sayfası</h3>
        </div>
        <hr>


        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            @Html.HiddenFor(x => x.ID)
            <div class="card-body">
                <!--<div class="form-group">
                <label>Profil Foto</label>-->
                @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">
                @Html.TextBoxFor(x => x.ImagePath, new { @class = "form-control", placeholder = "profil foto" })
                </div>*@
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "kullanıcı adı" })
                </div>
                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextAreaFor(x => x.Name, new { @class = "form-control", placeholder = "ad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    @Html.TextAreaFor(x => x.LastName, new { @class = "form-control", placeholder = "soyad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @Html.TextAreaFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextAreaFor(x => x.Email, new { @class = "form-control", placeholder = "email" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Rolü</label>
                    @Html.TextAreaFor(x => x.Role, new { @class = "form-control", placeholder = "Departmanın Numarasını Giriniz.. (Admin=1, KayıtlıÜye=2, SatınAlma=5, İnsanKaynakları=7, Finans=8, Halklaİlişkiler=9)" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    @Html.TextAreaFor(x => x.BirthDate, new { @class = "form-control", placeholder = "doğum tarihi" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control", placeholder = "adres" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextAreaFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "telefon" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Cinsiyet</label>
                    @Html.TextAreaFor(x => x.Gender, new { @class = "form-control", placeholder = "cinsiyet" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->
            @*<div class="card-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>*@
            <div class="form-group">
                @Html.ActionLink("Listeye Geri Dön", "Indexx", null, new { @class = "btn btn-warning btn btn-round" })
                <button type="submit" class="btn btn-round btn-success shadow-primary px-5"><i class="icon-lock"></i>Düzenle</button>

            </div>
        </form>
    </div>
</div>















