@model SERVICE.ViewModels.AppUserVM.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Halklaİliskiler/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">


<body>

    <section id="form">

        <div class="container">
            <div class="row">
                <div class="alert alert-dark" role="alert" id="success_message" style="background-color:whitesmoke">
                    <h3 style="color:red"><b>@TempData["Basarisiz"]</b></h3>
                </div>

                <div class="col-sm-4 col-sm-offset-1">

                    <div class="login-form">

                        <h2>Giriş yapınız. Üyeliğiniz yoksa lütfen kayıt olunuz.</h2>
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {

                            @Html.ValidationMessageFor(x => x.UserName)
                            <input type="text" placeholder="Username" name="UserName" />

                            @Html.ValidationMessageFor(x => x.Password)
                            <input type="password" placeholder="Password" name="Password" />
                            <button type="submit" class="btn btn-default">Login</button>

                        }


                    </div>
                </div>
            </div>
        </div>
    </section>

    
</body>
</html>
