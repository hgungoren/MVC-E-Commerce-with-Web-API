@model IEnumerable<MODEL.Entities.AnswerLine>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Halklaİliskiler/Views/Shared/_Layout.cshtml";
    int number = 1;
}


<div class="card">
    <div class="body">
        <br />
        <h5 class="text-center" style="color:#ff6a00">Anket Detay Sayfası</h5>
        <br />
        @*<div class="table-responsive">*@

        @foreach (var item in Model)
        {
            <span><b>@number) </b> @item.Question</span>
            <br /><b>@item.AppUser</b>
            <br /><br /><br />
            number++;
        }

        <p>
            @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn-sm btn-primary btn btn-round" })
        </p>

        @*</div>*@
    </div>
</div>
