@model MODEL.Entities.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/SatınAlma/Views/Shared/_Layout.cshtml";
}

<form role="form" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputPassword4">Personel Vesikalık</label>
                            <input type="file" name="imagePath" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Ürün Ad</label>
                            @*<input type="text" class="form-control" id="inputEmail4" placeholder="Ad Girin">*@
                            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Ürün Ad Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Ürün Fiyat</label>
                            @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", placeholder = "Fİyat Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Ürün Stok Adedi</label>
                            @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", placeholder = "Ürün Stok Adet Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Kriter Notu</label>
                            @Html.TextBoxFor(x => x.CriterionNote, new { @class = "form-control", placeholder = "Kriter Notu Girin" })
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Ürün Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Ürün Açıklama Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Alt Kategori Adı</label>
                            @Html.TextBoxFor(x => x.SubCategory.SubCategoryName, new { @class = "form-control",  placeholder = "Alt Kategori Adı Girin" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Tedarikçi Şirket Adı</label>

                            @Html.TextBoxFor(x => x.Supplier.CompanyName, new { @class = "form-control", placeholder = "Tedarikçi Şirket Adı Girin" })
                        </div>
                        
                        
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

