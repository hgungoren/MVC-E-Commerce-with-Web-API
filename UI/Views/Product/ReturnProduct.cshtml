@model MODEL.Entities.ProductReturn
@{
    ViewBag.Title = "ReturnProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-8">
        <div class="contact-form">
            <h2 class="title text-center">Get In Touch</h2>
            <div class="status alert alert-success" style="display: none"></div>
            @using (Html.BeginForm("ReturnProduct", "Product", FormMethod.Post, new { @class = "well form-horizontal" }))
            {
                <fieldset>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                        <span><b>İadesi Olacak Ürünü Seçiniz</b></span>
                        <hr />
                        <div class="form-group">
                            <div class="form-group col-md-4">
                                @Html.DropDownListFor(model => model.ProductId, new SelectList(TempData["Products"] as List<MODEL.Entities.Product>, "ID", "ProductName"), new
                                {
                                    @class = "form-control",
                            data_placeholder = "Please select a product"
                                })
                                @*<select id="valueSelected" class="form-control">
                    <option selected>Ürün Seçin</option>

                    @foreach (var item in TempData["Products"] as List<MODEL.Entities.Product>)
                        {

                            <option value="@item.ID">@item.ProductName</option>
                        }
                </select>*@
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group col-md-6">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(model => model.NameSurname, new { @class = "form-control", placeholder = "Adınız Soyadınız..." })

                            </div>

                        </div>


                        <div class="form-group">
                            <div class="input-group col-md-6">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email..." })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="input-group col-md-12">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-book"></i></span>
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Telefon Numaranız..." })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="input-group col-md-12">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                @Html.ValidationMessageFor(model => model.IbanNo, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(model => model.IbanNo, new { @class = "form-control", placeholder = "Iban Numaranız..." })
                            </div>

                        </div>

                        @*<div class="form-group">
            <div class="input-group col-md-12">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Açıklama/Şikayet..." })
            </div>

        </div>*@

                        @if (TempData["Basarili"] != null)
                        {
                            <div class="alert alert-success" role="alert" id="success_message">
                                Gönderildi<i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarili"]
                            </div>
                        }


                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-warning">Gönder <span class="glyphicon glyphicon-send"></span></button>

                            </div>
                        </div>
                    </form>
                </fieldset>
            }
        </div>
    </div>


</div>
