@model MODEL.Entities.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Contact | E-Shopper</title>
    <link href="~/Content/theme/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/theme/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/theme/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/theme/css/price-range.css" rel="stylesheet">
    <link href="~/Content/theme/css/animate.css" rel="stylesheet">
    <link href="~/Content/theme/css/main.css" rel="stylesheet">
    <link href="~/Content/theme/css/responsive.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/Content/theme/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/theme/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/theme/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/theme/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/theme/images/ico/apple-touch-icon-57-precomposed.png">
</head>

<body>
    <div id="contact-page" class="container">
        <div class="bg">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="title text-center">Contact <strong>Us</strong></h2>
                    <div class="ba-content-box grid-3-1 simetri-home-row-1-3" style="border:none">
                        <div class="ExternalClassEC1CAB3086DA419C9B91CEB01D6204F8">
                            <iframe width="100%" height="350" frameborder="0" src="https://www.google.com/maps/embed?pb=%211m18%211m12%211m3%211d3011.6766342680107%212d29.02083311585608%213d40.98856112858587%212m3%211f0%212f0%213f0%213m2%211i1024%212i768%214f13.1%213m3%211m2%211s0x14cab8657699b699:0xd978afdefaa6d962%212zQmlsZ2UgQWRhbSBLYWTEsWvDtnk%215e0%213m2%211sen%212str%214v1561626521744%215m2%211sen%212str" style="border:0px;"></iframe>&nbsp;
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="contact-form">
                        <h2 class="title text-center">Get In Touch</h2>
                        <div class="status alert alert-success" style="display: none"></div>
                        @using (Html.BeginForm("Index", "Blog", FormMethod.Post, new { @class = "well form-horizontal" }))
                        {
                            <fieldset>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                                    <div class="form-group">
                                        <div class="input-group col-md-6">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız" })

                                        </div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group col-md-6">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                                        </div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group col-md-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-book"></i></span>
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Konu" })
                                        </div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group col-md-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(model => model.Message, new { @class = "form-control", placeholder = "Mesajınız..." })
                                        </div>
                                        
                                    </div>

                                    @if (TempData["Basarili"] != null)
                                    {
                                        <div class="alert alert-success" role="alert" id="success_message">
                                            Gönderildi<i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarili"]
                                        </div>
                                    }
                                    

                                    <div class="form-group">
                                        <label class="col-md-4 control-label"></label>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-warning">Gönder <span class="glyphicon glyphicon-send"></span></button>

                                        </div>
                                    </div>
                                </form>
                            </fieldset>
                        }
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="contact-info">
                        <h2 class="title text-center">Contact Info</h2>
                        <address>
                            <p>E-Ticaret Inc.</p>
                            <p>Caferağa, Mühürdar cad. no:76, 34710</p>
                            <p>Kadıköy İstanbul</p>
                            <p>Telefon: +2346 17 38 93</p>
                            <p>Fax: 1-714-252-0026</p>
                            <p>Email: info@evimikur.com</p>
                        </address>
                        <div class="social-networks">
                            <h2 class="title text-center">Social Networking</h2>
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com.tr/"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="https://www.twitter.com.tr/"><i class="fa fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="https://www.google.com.tr/"><i class="fa fa-google-plus"></i></a>
                                </li>
                                <li>
                                    <a href="https://www.youtube.com/"><i class="fa fa-youtube"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/theme/js/jquery.js"></script>
    <script src="~/Content/theme/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/theme/http://maps.google.com/maps/api/js?sensor=true"></script>
    <script type="text/javascript" src="~/Content/theme/js/gmaps.js"></script>
    <script src="~/Content/theme/js/contact.js"></script>
    <script src="~/Content/theme/js/price-range.js"></script>
    <script src="~/Content/theme/js/jquery.scrollUp.min.js"></script>
    <script src="~/Content/theme/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/theme/js/main.js"></script>
</body>
</html>


