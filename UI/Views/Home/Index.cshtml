@model List<MODEL.Entities.Product>

@{
    ViewBag.Title = "Home Page";

}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->


                        <div class="panel-heading">
                            <div class="panel-title">

                                @foreach (var c in ViewBag.Categories as List<MODEL.Entities.Category>)
                                {
                                    <a href="@Url.Action("ProductsByCategory",new { id=c.ID})" class="list-group-item">@c.CategoryName</a>

                                }

                            </div>
                        </div>
                    </div><!--/category-products-->


                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    


                    <h2 class="title text-center">Features Items</h2>

                    <div class="category-tab">
                        <!--category-tab-->


                        <div class="col-lg-12">

                            <ul class="nav nav-tabs">
                                @foreach (var item in ViewBag.SubCategories as List<MODEL.Entities.SubCategory>)
                                {
                                    <li><a href="#@item.ID" data-toggle="tab">@item.SubCategoryName</a></li>
                                }
                            </ul>
                            <div class="tab-content">
                                @foreach (var item in ViewBag.SubCategories as List<MODEL.Entities.SubCategory>)
                                {
                                    <div class="tab-pane fade active in" id="@item.ID">
                                        @foreach (var p in Model)
                                        {
                                            if (item.ID == p.SubCategoryId)
                                            {
                                                <div class="col-sm-3">
                                                    <div class="product-image-wrapper">
                                                        <div class="single-products">
                                                            <div class="productinfo text-center">

                                                                <a href="/Home/ProductDetail/@p.ID">
                                                                    <img src="~/Content/image/@p.ImagePath" alt="" width="350" height="300" />
                                                                </a>

                                                                <a href="/Home/ProductDetail/@p.ID">
                                                                    <h2>@p.UnitPrice.ToString("C")</h2>
                                                                </a>

                                                                <p>@p.ProductName</p>
                                                                @Html.ActionLink("Sepete ekle", "AddToCart", new { id = p.ID }, new { @class = "btn btn-primary text-center" })

                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div><!--/category-tab-->
                </div>
            </div>
        </div>
    </div>
    </div>


</section>


















